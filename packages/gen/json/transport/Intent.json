{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$ref": "#/definitions/Intent",
    "definitions": {
        "Intent": {
            "properties": {
                "id": {
                    "type": "string",
                    "description": "UUID generated in the client (localdb primary key)"
                },
                "text_message": {
                    "type": "string"
                },
                "audio_message": {
                    "type": "string"
                },
                "image_message": {
                    "type": "string"
                },
                "intent_status": {
                    "enum": [
                        "INTENT_STATUS_UNSPECIFIED",
                        0,
                        "INTENT_STATUS_PROCESSING",
                        1,
                        "INTENT_STATUS_PENDING_REVIEW",
                        2,
                        "INTENT_STATUS_CONFIRMED",
                        3,
                        "INTENT_STATUS_FAILED",
                        4
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Intent Status"
                },
                "requires_review": {
                    "type": "boolean"
                },
                "command_id": {
                    "type": "string"
                },
                "created_at": {
                    "type": "string",
                    "description": "Timestamp in milliseconds (our Checkpoint)",
                    "format": "date-time"
                },
                "updated_at": {
                    "type": "string",
                    "description": "Timestamp in milliseconds (our Checkpoint)",
                    "format": "date-time"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Intent",
            "description": "represents the intent of a financial transaction"
        }
    }
}